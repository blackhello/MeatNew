<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.meat.MyActivity">
    <android.support.v7.widget.Toolbar style="@style/toolbg"
        android:layout_marginBottom="5sp">
        <Button
            android:id="@+id/btn_back"
            style="@style/toolback"
            android:background="@mipmap/back"
            android:onClick="btnback" />
        <TextView
            android:id="@+id/textView"
            style="@style/tooltitle"
            android:text="我的" />
    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#e6e6e6"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:gravity="center"
                android:text="账户余额"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="应收货款"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="应付货款"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:gravity="center"
                android:text="1000.00元"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8000.00元"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7000.00元"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="我的业务" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_wdjy"
            style="@style/btnmy"
            android:layout_gravity="top"
            android:background="@drawable/btnmy"
            android:drawableTop="@mipmap/myjy"
            android:text="我的交易" />

        <Button
            android:id="@+id/btn_wdys"
            style="@style/btnmy"
            android:layout_column="1"
            android:layout_gravity="top"
            android:layout_row="0"
            android:background="@drawable/btnmy"
            android:drawableTop="@mipmap/wdys"
            android:text="我的应收" />

        <Button
            android:id="@+id/btn_wdyf"
            style="@style/btnmy"
            android:layout_column="2"
            android:layout_gravity="top"
            android:layout_row="0"
            android:background="@drawable/btnmy"
            android:drawableTop="@mipmap/wdyf"
            android:text="我的应付" />

        <Button
            android:id="@+id/btn_spaq"
            style="@style/btnmy"
            android:layout_column="3"
            android:layout_gravity="top"
            android:layout_row="0"
            android:background="@drawable/btnmy"
            android:drawableTop="@mipmap/aqzs"
            android:text="安全追溯" />
    </GridLayout>

    <Button
        android:id="@+id/btn_Out"
        style="@style/btn"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btn"
        android:text="退出登录" />
    <Button
        android:id="@+id/btn_Outsoft"
        style="@style/btn"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btn"
        android:text="退出软件" />



</LinearLayout>
