<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--按下时效果-->
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#ffff0000"></solid>
            <stroke android:color="#ffff0000" android:width="1dip"/>
            <corners android:radius="5dip"></corners>
        </shape>

    </item>
    <item android:state_pressed="false" >
        <shape>
            <solid android:color="#ffefefef"></solid>
            <stroke android:color="#ff000000" android:width="1dip"/>
            <corners android:radius="5dip"></corners>
        </shape>
        <color android:color="#ffffff"></color>
    </item><!--默认效果-->
    <item android:right="10dp">
        <bitmap
            android:gravity="end"
            android:src="@mipmap/down" />
    </item>
</layer-list>